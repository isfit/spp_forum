<!-- table header stuff here -->
<table cellspacing="20">
  <tr>
    <th>Name</th>
    <th>E-mail</th>
    <th>Roles</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
<% @users.each do |u| %>
  <tr>
    <td><%= link_to_if(can?(:read, User), "#{u.name}", user_path(u.id)) {} %></td>
    <td><%= "#{u.email}" %></td>
    <td><%= "#{u.roles.collect{|r| r.name}}" %></td>
    <td><%= link_to_if(can?(:edit, User), image_tag("edit.png"), edit_user_path(u.id)) {} %></td>
    <td><%= link_to_if(can?(:delete, u), image_tag("trash.png"), u, :confirm => "Are you sure?", :method => :delete) {} %></td>
  </tr>
<% end %>
</table>
