
<%= debug roles_new %>

<p>Profile picture</p>
<p><%= image_tag @user.picture.url(:medium) %></p>
<p><%= f.file_field :picture %></p>

<p><%= f.label :firstname %></p>
<p><%= f.text_field :firstname %></p>

<p><%= f.label :surname %></p>
<p><%= f.text_field :surname %></p>

<p><%= f.label :email %></p>
<p><%= f.text_field :email %></p>

<p>Description of yourself</p>
<p><%= f.text_area :description %></p>

<% if can? :read, Role %>
  <p><%= f.label :roles %></p>
  <p><%= roles %></p>
<% end %>

<% if can? :update, Role %>
  <p>Select role for user</p>
  <p><%= select_tag "roles_new", options_from_collection_for_select(roles_new, "id", "name") %></p>
<% end %>

