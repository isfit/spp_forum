<%= nav_links(render 'users/user_login_info') %>
<%= subnav_links(render :partial => "articles/navigation", :locals => {:type => :show_article, :article=>@article}) %>

<% if can?(:update, @article) %>
  <p>
  <%= link_to 'Edit article', edit_article_path(@article) %>
  </p>
<% end %>

<% if !(@article.ingress_en.empty? and @article.ingress_no.empty?) %>
  <p>
  <strong><%= (!@article.ingress_en.empty? ? @article.ingress_en : @article.ingress_no) %></strong>
  </p>
<% end %>

<p>
<%= (!@article.body_en.empty? ? @article.body_en : @article.body_no) %>
</p>

